{
  "name": "eslint-config-amercier",
  "version": "0.0.0",
  "description": "My personal collection of all-in-one ESLint Shareable Configs",
  "homepage": "https://github.com/amercier/eslint-config-amercier",
  "repository": {
    "type": "git",
    "url": "https://github.com/amercier/eslint-config-amercier"
  },
  "bugs": {
    "url": "https://github.com/amercier/eslint-config-amercier/issues"
  },
  "author": "Alex Mercier <pro.alexandre.mercier@gmail.com> (https://amercier.com)",
  "contributors": [
    {
      "name": "Alex Mercier",
      "url": "https://amercier.com/"
    }
  ],
  "license": "ISC",
  "keywords": [
    "check",
    "checker",
    "code checker",
    "code linter",
    "code standards",
    "code style",
    "code",
    "config",
    "enforce",
    "eslint",
    "eslintconfig",
    "hint",
    "jscs",
    "jshint",
    "lint",
    "policy",
    "quality",
    "simple",
    "style checker",
    "style linter",
    "style",
    "verify",
    "amercier",
    "all-in-one"
  ],
  "files": [
    "*.js",
    "lib/*.js"
  ],
  "engines": {
    "node": ">= 8"
  },
  "dependencies": {
    "@vue/cli-service": "^3.3.1",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint-config-jsdoc-strict": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-jsdoc": "^4.0.1",
    "eslint-plugin-more": "^0.3.2",
    "eslint-plugin-strict-vue": "^1.0.0",
    "eslint-plugin-unicorn": "^7.1.0",
    "eslint-plugin-vue": "vuejs/eslint-plugin-vue"
  },
  "devDependencies": {
    "eslint": "^5.10.0 || ^4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3"
  },
  "peerDependencies": {
    "eslint": "^5.10.0 || ^4.19.1"
  },
  "scripts": {
    "test": "eslint test",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore lib",
    "lint:prettier": "prettier --ignore-path .gitignore --list-different '**/*.{js,json,md,yml}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,yml}": "prettier --list-different",
    "(lib/**/,)*.js": "eslint"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "browser": false
    },
    "rules": {
      "global-require": "off"
    }
  }
}
